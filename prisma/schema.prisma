generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bar {
  id        String   @id @default(cuid())
  name      String
  description String? @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  categories Category[]

  @@map("bars")
}

model Category {
  id        String   @id @default(cuid())
  slug     String   
  name      String   
  description String? @db.Text
  imageUrl String?
  barId  String
  bar    Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  products Product[]

  @@map("categories") 
  @@unique([name, barId])
  @@unique([slug, barId])
  @@unique([id, barId])
}

model Product {
  id          String    @id @default(cuid())
  slug        String
  name        String
  description String?   @db.Text
  price       Decimal   @db.Decimal(10, 2)
  imageUrl    String?
  method      String?   @db.Text 
  ingredients String?   @db.Text
  categoryId  String
  category    Category  @relation(fields: [categoryId, barId], references: [id, barId], onDelete: Cascade)
  barId       String
  bar         Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name, categoryId, barId])
  @@unique([slug, categoryId, barId])

  @@map("products")
}

